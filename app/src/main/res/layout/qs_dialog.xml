<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="2dp"
    >

    <LinearLayout android:id="@+id/lTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="4dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="8dp"
        >

        <TextView
            android:id="@+id/textProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:shadowColor="#000000"


            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="@string/default_progress"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:layout_gravity="start"
            android:layout_marginStart="40dp"
            />
        <Space android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bCancel"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@mipmap/red_dot"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:padding="4dp"


            />

        <Button
            android:id="@+id/bConfirm"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:background="@mipmap/green_dot"
            android:layout_marginEnd="46dp"
            android:padding="4dp"



            />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            >

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/seek_bar_background"
                android:max="30"
                android:min="0"
                android:progressDrawable="@drawable/progress_bar_large"
                android:splitTrack="false"
                android:thumbTint="@color/color_transparent"

                />

    </LinearLayout>



</LinearLayout>

